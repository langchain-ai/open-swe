{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["node", "react"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
